<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_48</item>
        <item name="cornerSizeBottomRight">@dimen/dp_48</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp_48</item>
        <item name="cornerSizeTopLeft">@dimen/dp_48</item>
    </style>

    <style name="Style.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="startIconTint">@color/text_input_icon_color_list</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorAccent">@color/teal_blue</item>
    </style>

    <style name="Widget.App.Appbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@drawable/top_app_bar_gradient</item>
    </style>
</resources>